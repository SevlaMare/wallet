<div class="flex space-between">
  <span class="material-icons">menu</span>
  <h1>TRANSACTIONS</h1>
  <span class="material-icons">search</span>
</div>

<div class="flex space-between align-center board">
  <h3>Total amount</h3>

  <p>$<%= number_with_precision(
    current_user.transactions.with_group.sum(:amount),
    :precision => 2) %></p>
</div>

<div class="list">
<% current_user.transactions.with_group.sort_most_recent.each do |line| %>
  <div class="list-item">
    <%= link_to raw('
      <span class="material-icons">account_balance_wallet</span>
    '), root_path %>

    <div class="flex space-between">
      <p class="dark-text"><%= line.name %></p>
      <p class="dark-text t-bold">$<%= number_with_precision(line.amount, :precision => 2) %></p>
    </div>

    <%= line.created_at.strftime("%d %b %Y") %><br>
  </div>
<% end %>
</div>

<div class="flex btn-bg">
  <%= link_to 'NEW TRANSACTION', new_transaction_path,
    :class => "btn" %>
</div>