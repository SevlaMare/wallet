<h1>TRANSACTIONS</h1>

<h2>TOTAL AMOUNT:
  <%= number_with_precision(total_amount_with_group, :precision => 0) %>
</h2>

<% @transaction.with_group.sort_most_recent.each do |line| %>
  <%= line.name %> •
  <%= number_with_precision(line.amount, :precision => 2) %> •
  <%= line.created_at.strftime("%b %d") %>

  <%= link_to raw('
    <span class="material-icons">account_balance_wallet</span>
  '), root_path %>

  <br>
<% end %>

<%= link_to 'NEW TRANSACTION', new_transaction_path,
:class => "btn" %>
