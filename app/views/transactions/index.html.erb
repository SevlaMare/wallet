<h1>TRANSACTIONS</h1>

<h2>TOTAL AMOUNT: 
  <%= total_amount_with_group %>
</h2>

<% @transaction.sort_most_recent.each do |line| %>
  <%= line.name %>
  <%= line.amount %>
  <%= line.created_at.strftime("%b %d") %>

  <%= link_to raw('
    <span class="material-icons">account_balance_wallet</span>
  '), root_path %>

  <br>
<% end %>

<%= link_to 'NEW TRANSACTION', new_transaction_path,
:class => "btn" %>
