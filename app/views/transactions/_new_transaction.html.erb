<%= form_with(model: @transaction) do |form| %>
  <%= form.label(:name, 'Matter: ') %>
  <%= form.text_field(:name) %>

  <%= form.label(:amount, 'Amount: ') %>
  <%= form.number_field(:amount) %>

  <%-#TODO: render only if not nill -%>
  <%= form.select(:group_id) do %>
    <% @groups.each do |group| %>
      <%= content_tag(:option, group.name, value: group.id) %>
    <% end %>
  <% end %>

  <%= form.submit('Register it!') %>
<% end %>
