<%= form_with(model: @transaction) do |form| %>
  <%= form.label(:name, 'Subject: ') %>
  <%= form.text_field(:name) %>

  <%= form.label(:amount, 'Amount: ') %>
  <%= form.number_field(:amount) %>

  <%= form.label(:amount, 'Group: ') %>
  <%= form.select(:group_id) do %>
    <% @groups.each do |group| %>
      <%= content_tag(:option, group.name, value: group.id) %>
    <% end %>
  <% end %>

  <div class="flex btn-bg">
    <%= form.submit('Register it!', class: 'btn btn-bg') %>
  </div>
<% end %>
