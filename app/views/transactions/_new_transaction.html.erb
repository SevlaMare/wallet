<%= form_with(model: @transaction) do |form| %>
  <%= form.label(:name, 'Matter: ') %>
  <%= form.text_field(:name) %>

  <%= form.label(:amount, 'Amount: ') %>
  <%= form.number_field(:amount) %>

  <% @groups.each do |option| %>
    <%= option.name %>
    <%= form.check_box(option.name) %>
  <% end %>

  <%= form.submit('Register it!') %>
<% end %>
